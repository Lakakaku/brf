# =============================================================================
# BRF Portal - Development Environment Variables
# =============================================================================
# 
# This file contains development-specific environment variables that override
# the base .env.example values. These are safe defaults for local development.
#
# SECURITY NOTE: This file can be committed as it contains no sensitive data.
# All values here are for development only and should not be used in production.
#
# =============================================================================

# =============================================================================
# DEVELOPMENT ENVIRONMENT SETTINGS
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEBUG=true

# =============================================================================
# DATABASE (SQLite for zero-cost development)
# =============================================================================

DATABASE_URL=file:./database/brf_portal_dev.db
DATABASE_PATH=./database/brf.db
DATABASE_LOG_QUERIES=true
DATABASE_BACKUP_ENABLED=false

# Test database for running tests
TEST_DATABASE_URL=file:./database/test.db

# =============================================================================
# AUTHENTICATION (Development-friendly settings)
# =============================================================================

# Generate a secure secret for development (this is just an example)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-minimum-32-characters-long-for-security

# Relaxed password requirements for development
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# =============================================================================
# MOCK SERVICES (All enabled for development)
# =============================================================================

# BankID - Use mock service during development
BANKID_ENABLED=false
ENABLE_EMAIL_AUTH=true
ENABLE_TEST_USERS=true
MOCK_BANKID=true

# External API mocking
MOCK_EMAIL=true
MOCK_SMS=true
MOCK_PAYMENT=true
MOCK_EXTERNAL_APIS=true

# =============================================================================
# LOCAL SERVICES
# =============================================================================

# Local file storage (no cloud costs)
LOCAL_STORAGE_PATH=./storage/uploads
MAX_FILE_SIZE=10MB
MAX_TOTAL_SIZE=100MB

# Local Redis (if running, otherwise will fall back to in-memory)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================

# Use mock email service or configure a real SMTP for testing
FROM_EMAIL=dev@localhost
FROM_NAME=BRF Portal Dev
REPLY_TO_EMAIL=dev@localhost
EMAIL_TEMPLATE_DIR=./templates/email

# Uncomment and configure if you want to test real emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-test-email@gmail.com
# SMTP_PASS=your-app-password

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/development.log
PERFORMANCE_MONITORING_ENABLED=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

STORYBOOK_ENABLED=true
API_DOCS_ENABLED=true
DEBUG_TOOLBAR_ENABLED=true

# Seed test data for development
SEED_TEST_USERS=true
SEED_TEST_COOPERATIVES=true
SEED_TEST_DOCUMENTS=false  # Set to true if you want sample documents

# =============================================================================
# FEATURE FLAGS (Development testing)
# =============================================================================

# Enable/disable features for testing
FEATURE_BANKID_AUTH=false  # Mock only in development
FEATURE_AI_PROCESSING=false  # Requires API keys
FEATURE_PAYMENT_PROCESSING=false  # Mock only in development
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# Premium features (can test with mocks)
FEATURE_ENERGY_OPTIMIZATION=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_WHITE_LABEL=false
FEATURE_API_ACCESS=true

# =============================================================================
# SECURITY (Development settings)
# =============================================================================

# Simple keys for development (NEVER use these in production!)
ENCRYPTION_KEY=development-encryption-key-32-chars
JWT_SIGNING_KEY=development-jwt-signing-key-32-chars
JWT_SECRET=development-jwt-secret-minimum-32-characters-for-security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=dev-session-secret-change-in-production-minimum-32-chars
SESSION_COOKIE_NAME=brf-portal-session
SESSION_MAX_AGE=86400
TOTP_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# CORS settings for local development
CORS_ORIGIN=http://localhost:3000
CSP_ENABLED=false  # Disabled for easier development

# =============================================================================
# MULTI-TENANT (Development)
# =============================================================================

MULTI_TENANT_MODE=true
ENABLE_SUBDOMAIN_ROUTING=false  # Use localhost for development
MAX_TENANTS_PER_INSTANCE=10  # Limited for development

# =============================================================================
# API QUOTAS (Development limits)
# =============================================================================

API_RATE_LIMIT_PER_HOUR=10000  # Higher for development testing
API_RATE_LIMIT_PER_DAY=100000

# Lower quotas for development to prevent accidental overuse
OPENAI_MONTHLY_QUOTA=10000  # tokens
BANKID_MONTHLY_QUOTA=100    # authentications
SMS_MONTHLY_QUOTA=50        # messages

# =============================================================================
# HEALTH AND MONITORING
# =============================================================================

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=5000

# Disable external monitoring in development
SENTRY_DSN=  # Empty = disabled
ANALYTICS_ENABLED=false

# =============================================================================
# DEVELOPMENT UTILITIES
# =============================================================================

# Enable development helpers
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# Database utilities
AUTO_MIGRATE_ON_START=true
AUTO_SEED_ON_EMPTY=true

# =============================================================================
# OPTIONAL API KEYS FOR DEVELOPMENT TESTING
# =============================================================================
#
# Uncomment and add real API keys if you want to test specific integrations:
#
# OpenAI (for AI features testing)
# OPENAI_API_KEY=sk-your-openai-key-here
#
# Email services (for testing real email sending)
# SENDGRID_API_KEY=your-sendgrid-key
#
# SMS services (for testing real SMS sending)
# SMS_API_USERNAME=your-46elks-username
# SMS_API_PASSWORD=your-46elks-password
#
# =============================================================================

# Development completed successfully! 
# Run 'npm run dev' to start the development server.